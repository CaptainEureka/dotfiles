#!/bin/sh
#  ____ ____  ______        ____  __ 
# | __ ) ___||  _ \ \      / /  \/  |
# |  _ \___ \| |_) \ \ /\ / /| |\/| |
# | |_) |__) |  __/ \ V  V / | |  | |
# |____/____/|_|     \_/\_/  |_|  |_|
#
# --- Author: CaptainEureka
# --- GitHub: https://github.com/CaptainEureka
# --- A customized bspwmrc

#### AUTO START ####
sxhkd &
launch-polybar
wal -f ~/.config/.colors/glorious.json &
setbg ~/Downloads/jack-fifield-y8H9i6yxklw-unsplash.jpg &
picom --dbus --experimental-backends --backend glx &
libinput-gestures &
sleep 1s; launch-dunst

#### MONITORS ####
bspc monitor eDP1 -d 1 2 3 4 5
bspc monitor DP1  -d 6 7 8 
bspc config remove_disabled_monitors  true
bspc condig remove_unplugged_monitors true

#### BSPWM CONFIG ####
bspc config border_width        0
bspc config border_radius       12
bspc config window_gap          20
bspc config top_padding         54
bspc config bottom_padding      0
bspc config right_padding       0
bspc config left_padding        0

xsetroot -cursor_name left_ptr
bspc config pointer_modifier mod4
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner 

bspc config split_ratio             0.5
bspc config borderless_monocle      false
bspc config gapless_monocle         false
bpsc config focus_follows_pointer   true
bspc config click_to_focus          button1 
bspc config single_monocle          true

#### BSPWM COLORS ####

# source pywal colors
. "${HOME}/.cache/wal/colors.sh"
# bspc config normal_border_color     "#2f334d"
# bspc config active_border_color     "#2f334d"
bspc config normal_border_color     "#82aaff"
# bspc config active_border_color     "#46d3be"
bspc config focused_border_color    "#46d3be"
bspc config presel_feedback_color   "$color4"
bspc config urgent_border_color     "$color4"

#### Hide polybar when fullscreen ####
# xdo below -t $(xdo id -n root) $(xdo id -a polybar-mybar_eDP1)

#### BSPWM WINDOW RULES ####
bspc rule -a Gimp desktop='^7' state=floating follow=on
bspc rule -a 'Firefox Beta' desktop='^2'
bspc rule -a firefox desktop='^2'
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a feh desktop='^4' state=floating
bspc rule -a Thunar desktop='^4' state=floating
bspc rule -a Sxiv state=floating rectangle=$(bsp-rectangle 1920 1080)
bspc rule -a dolphin desktop='^4' state=floating rectangle=$(bsp-rectangle 2800 1575)
bspc rule -a Yad state=floating
