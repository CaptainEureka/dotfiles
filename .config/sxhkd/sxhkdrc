# --- A customized sxhkdrc for bspwm

#### WM INDEPENDENT HOTKEYS ####

# description: terminal emulator
super + Return
    kitty	

# description: rofi runner 
super + shift + {Return,d} 
	rofi-{appsmenu,appslist}

# description: make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# description: Rofi menu scripts
super + shift + { p, s, a, z, w}
    rofi-{powermenu,search,alt-tab,config-menu,themer}

# description: Rofi bw menu
super + shift + b
	bwmenu

# description: Rofi maim utility
Print
    rofi-maim

# description: Screen brightness controls
{_,super + ,super + shift + }XF86MonBrightness{Up,Down}
    light{ -A 10, -A 5, -S 100, -U 10, -U 5, -S 10 }

# description: Audio controls
{_,super + }XF86Audio{Mute,RaiseVolume,LowerVolume}
    amixer sset Master {toggle, mute, 5%+, 1%+, 5%-, 1%-}

# description: Media player controls
XF86Audio{Play,Pause,Next,Prev}
    playerctl {play,pause,next,previous}

#
# bspwm specific hotkeys
#

# description: quit/restart bspwm
super + shift + {Escape,r}
	bspc {quit,wm -r}

# description: close and kill
super + {_,shift + }q
    bspc node -{c,k}

# description: alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# description: send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# description: swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# description: set the window state
super + {t,shift + t}
	bspc node -t {tiled,pseudo_tiled}

# description: toggle floating window and center
super + shift + space
    bspc node focused.floating -t tiled || (bspc node focused.tiled -t floating && xdo resize -w 1600 -h 900 && xdo move -x 800 -y 450)

# description: toggle fullscreen
super + f
	bsp-fullscreen

# description: set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# description: focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# description: focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# description: focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# description: focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# description: focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# description: focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# description: focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# description: preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# description: preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# description: cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# description: cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# description: expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# description: contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# description: move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
