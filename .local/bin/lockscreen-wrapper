#!/usr/bin/env bash

. "${HOME}/.cache/wal/colors.sh"

function process_color() {
  clr="$1"

  echo -n $clr | sed -e 's/#//g'
  echo -n "$2"
}

function day_suffix() {
  case `date +%-d` in
    1|21|31) echo "st";;
    2|22)    echo "nd";;
    3|23)    echo "rd";;
    *)       echo "th";;
  esac
}

datestr="%A, %-d`day_suffix` of %B"

bgr=$(process_color ${background} 50)
base01=$(process_color ${color0} 80)
base0=$(process_color ${color8} 50)
fgr=$(process_color ${foreground} ff)
fgr_t=$(process_color ${foreground} 50)
green=$(process_color ${color6} ff)
red=$(process_color ${color1} ff)
transparent=00000000
# font="Montserrat"
# tfont="Roboto"
font="Quicksand"
tfont="Pacifico"

i3lock -k --indicator \
  -c $bgr \
  --indpos="w/2:h-80" \
  --radius 25 --ring-width 5 \
  --veriftext='' --wrongtext='' --noinputtext='' \
  --insidevercolor=$transparent \
  --insidewrongcolor=$transparent \
  --insidecolor=$transparent \
  --ringvercolor=$transparent \
  --ringwrongcolor=$transparent \
  --ringcolor=$fgr_t \
  --line-uses-inside \
  --keyhlcolor=$green \
  --bshlcolor=$red \
  --separatorcolor=$transparent \
  --clock --force-clock \
  --timecolor=$fgr \
  --timestr="%H:%M" \
  --time-font="$tfont" \
  --timepos="w/2:h/2" \
  --timesize=120 \
  --greetertext="____________________" \
  --greetercolor=$fgr_t \
  --greeterpos="tx:ty+20" \
  --datecolor=$fgr \
  --datestr="$datestr" \
  --date-font="$font" \
  --datepos="tx:ty+60" \
  --datesize=22
