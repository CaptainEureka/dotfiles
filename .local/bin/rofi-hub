#!/bin/bash

function get_options() {
    echo -en "<span> bgcolor='#82aaff' fgcolor='#131421' weight='heavy'> Battery </span>\0icon\x1fbattery\n"
    echo -en "Volume\0icon\x1fpreferences-desktop-sound\n"
    echo -en "Updates\0icon\x1fpackage\n"
    echo -en "Time\0icon\x1fclock\n"
    echo -en "Mail\0icon\x1fmail-client\n"
    echo -en "Wallpaper\0icon\x1fphotoqt\n"
    echo -en "Notifications\0icon\x1fpreferences-desktop-notification-bell\n"
}

