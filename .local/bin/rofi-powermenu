#!/bin/bash

rofi_command="rofi -theme powermenu"

### Options ###
power_off=""
reboot=""
lock=""
log_out=""

options="$power_off\n$reboot\n$lock\n$log_out"

current_session=$(echo $DESKTOP_SESSION | cut -d '/' -f 5)

chosen="$(echo -e "$options" | $rofi_command -dmenu -selected-row 2 -l 4)"
case $chosen in
    $power_off)
        systemctl poweroff
        ;;
    $reboot)
        systemctl reboot
        ;;
    $lock)
        betterlockscreen -l blur
        ;;
    $log_out)
        if [ $current_session = 'i3' ]
        then
            i3exit logout
        fi
        if [ $current_session = 'bspwm' ]
        then
            bspc quit
        fi
        ;;
esac
