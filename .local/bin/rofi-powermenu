#!/bin/bash

function exec_shutdown() {
  sleep 1;
  systemctl shutdown
}

function exec_reboot() {
  sleep 1;
  systemctl reboot
}

function exec_lock() {
  lockscreen-wrapper
}

function exec_logoff() {
  session=$(echo $DESKTOP_SESSION | cut -d'/' -f5)
  case $session in
    "i3")
        sleep 1;
        i3exit
        ;;
    "bspwm")
        sleep 1;
        bspc quit
        ;;
    "qtile")
      sleep 1;
      qshell --command shutdown\(\)
  esac
}

function get_options() {
  case "$1" in
    "sysicons")
        power_off="Shutdown\0icon\x1fsystem-shutdown"
        reboot="Reboot\0icon\x1fsystem-reboot"
        lock="Lock\0icon\x1fsystem-lock-screen"
        log_out="Logoff\0icon\x1fsystem-log-out"
        echo -en "$power_off\n$reboot\n$lock\n$log_out"
        ;;
    "feather")
        power_off=""
        reboot=""
        lock=""
        log_out=""
        echo -en "$power_off\n$reboot\n$lock\n$log_out"
        ;;
    *)
        echo -e "Usage:"
        echo -e "Subcommands:"
        echo -e "     sysicons    uses system defined icons (from iconset)"
        echo -e "     feather      uses the feather font icons"
        ;;
  esac
}

case "$1" in
  "sysicons")
      rofi_command="rofi -theme powermenuv2"
      ;;
  "feather")
      rofi_command="rofi -theme powermenu"
      ;;
  *)
      rofi_command="rofi"
      ;;
esac

chosen="$( get_options "$1" | $rofi_command -dmenu -selected-row 2)"

case $chosen in
    "Shutdown"|"")
        exec_shutdown
        ;;
    "Reboot"|"")
        exec_reboot
        ;;
    "Lock"|"")
        exec_lock
        ;;
    "Logoff"|"")
        exec_logoff
        ;;
esac
