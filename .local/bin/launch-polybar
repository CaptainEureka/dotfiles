#!/bin/bash

# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -u $UID -x polybar >/dev/null; do sleep 1; done

# Launch Polybar, using default config location ~/.config/polybar/config

# Check which wm is running and launch appropriate bar
current_session=$(echo $DESKTOP_SESSION | cut -d '/' -f 5)

case $current_session in
    bspwm)
        if type "xrandr"; then
            for m in $(xrandr --query | grep " connected" | cut -d" " -f1); do
                MONITOR=$m polybar --reload bspwm-bar -c ~/.config/polybar/config.ini &
            done
        else
            polybar bspwm-bar -c ~/.config/polybar/config.ini &
        fi
        echo "Polybar launched..."
        ;;
    i3)
        polybar i3-bar -c ~/.config/polybar/config.ini &
        echo "Polybar launched..."
        ;;
    *)
        echo "X session unknown! Aborting..."
        ;;
esac
